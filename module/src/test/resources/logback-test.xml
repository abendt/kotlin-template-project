<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} [%20.20thread] [%50.50logger] %highlight(%.-1level) %msg%n%rEx{full, org.springframework, sun.reflect, java.lang.reflect}</pattern>
        </encoder>
    </appender>

    <logger name="demo" level="DEBUG" />

    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
